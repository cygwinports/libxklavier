inherit gnome2

DESCRIPTION="High-level XKB library"
HOMEPAGE="http://freedesktop.org/wiki/Software/LibXklavier"

PATCH_URI="3.8-no-undefined.patch"

PKG_NAMES="${PN} ${PN}12 ${PN}-devel"
libxklavier12_CONTENTS="usr/bin/*-12.dll usr/share/doc/"
libxklavier_devel_CONTENTS='usr/include/ usr/lib/ usr/share/gtk-doc/'

CYGCONF_ARGS="
	--with-xkb-base=/usr/share/X11/xkb
	--with-xkb-bin-base=/usr/bin
	--enable-xkb-support
	--enable-xmm-support
"
